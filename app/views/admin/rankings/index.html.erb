<h1 class="text-3xl font-bold mb-6">管理者用ランキング一覧ページ</h1>

<% @rankings.each do |category, rankings| %>
  <h2 class="text-2xl font-semibold mt-6 mb-4"><%= category %> 単品王</h2>
  <table class="min-w-full bg-white border border-gray-300 rounded-md shadow-sm">
    <thead class="bg-gray-100">
      <tr>
        <th class="py-2 px-4 border-b text-left">タイトル</th>
        <th class="py-2 px-4 border-b text-left">名前</th>
        <th class="py-2 px-4 border-b text-left">票数</th>
      </tr>
    </thead>
    <tbody>
      <% rankings[:single].each do |ranking| %>
        <tr class="border-b">
          <td class="py-2 px-4"><%= ranking.title %></td>
          <td class="py-2 px-4"><%= ranking.name %></td>
          <td class="py-2 px-4"><%= ranking.votes_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% unless category == 'lt' %>
    <h2 class="text-2xl font-semibold mt-8 mb-4"><%= category %> 合算王</h2>
    <table class="min-w-full bg-white border border-gray-300 rounded-md shadow-sm">
      <thead class="bg-gray-100">
        <tr>
          <th class="py-2 px-4 border-b text-left">タイトル</th>
          <th class="py-2 px-4 border-b text-left">名前</th>
          <th class="py-2 px-4 border-b text-left">票数</th>
        </tr>
      </thead>
      <tbody>
        <% rankings[:total].each do |ranking| %>
          <tr class="border-b">
            <td class="py-2 px-4"><%= ranking.titles %></td>
            <td class="py-2 px-4"><%= ranking.name %></td>
            <td class="py-2 px-4"><%= ranking.votes_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
