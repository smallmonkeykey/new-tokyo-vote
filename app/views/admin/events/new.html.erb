<h1 class="text-2xl font-bold mb-6 text-center">イベントを作成する</h1>

<div class="bg-white p-6 rounded-md shadow max-w-2xl mx-auto">
  <%= form_with model: @event, url: admin_events_path, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :title, "イベント名", class: "block font-medium mb-1" %>
      <%= f.text_field :title, class: "border border-gray-300 rounded-md p-2 w-full" %>
    </div>
    <div class="pt-4">
      <%= f.submit "作成する",
        class: "bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>
</div>

<div class="text-center mt-6">
  <%= link_to "イベント一覧へ戻る", admin_events_path, class: "text-blue-600 underline" %>
</div>
