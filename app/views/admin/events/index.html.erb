<div class="flex justify-center mt-8">
  <div class="w-full max-w-4xl bg-white shadow-md rounded-lg p-8">

    <h1 class="text-2xl font-bold mb-6 text-center">管理する</h1>

    <div class="mb-6 text-center">
      <%= link_to "イベントを新規作成する", new_admin_event_path, class: "text-blue-600 underline" %>
    </div>

    <table class="w-full border border-gray-300 rounded-lg overflow-hidden">
      <thead class="bg-gray-100">
        <tr class="border-b border-gray-300">
          <th class="py-3 px-4 text-left font-semibold text-gray-700">イベント名</th>
          <th class="py-3 px-4 text-left font-semibold text-gray-700">ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
            <td class="py-3 px-4">
              <%= link_to event.title, admin_event_path(event), class: "text-blue-600 underline" %>
            </td>
            <td class="py-3 px-4">
              <span class="inline-block px-3 py-1 rounded-full bg-blue-100 text-blue-800 text-sm">
                <%= event.status %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
