<h1>選択する</h1>

<% if @entries.present? %>
  <ul>
    <% @entries.each do |entry| %>
      <li>
        <%= entry.nickname %></strong><br>
        <%= entry.title %>
        <%= link_to '選択する', entry_path(entry, category: 'lt') %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>エントリーされていません</p>
<% end %>
